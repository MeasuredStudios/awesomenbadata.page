  "version": "0.1.0",
  "private": true,
  "author": "Jovani Pink",
  "license": "MIT",
  "keywords": [
    "typescript",
    "react",
    "gatsby",
    "Xstate",
    "Tailwindcss",
    "D3"
  ],
  "scripts": {
    "develop": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "test": "jest"
  },
  "husky": {
